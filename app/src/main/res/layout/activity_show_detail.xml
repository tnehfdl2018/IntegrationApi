<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDetail">

    <ImageView
        android:id="@+id/detail_icon"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_icon"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_id_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_icon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_icon"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_opening_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시가"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_id"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_op_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_id_colon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_opening_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시가 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/show_id"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_close_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종가"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_opening_price"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_cp_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_op_colon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_close_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종가 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/show_opening_price"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_low_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저가"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_close_price"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_lp_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_cp_colon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_low_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저가 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/show_close_price"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_high_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고가"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_low_price"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_hp_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_lp_colon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_high_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고가 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/show_low_price"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_trade_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거래량"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_high_price"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_tv_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_hp_colon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_trade_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거래량 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/show_high_price"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_trade_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거래 대금"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_trade_volume"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_tp_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_tv_colon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_trade_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거래 대금 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/show_trade_volume"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_average_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평균 단가"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_trade_price"
        app:layout_constraintLeft_toLeftOf="@+id/detail_icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_ap_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_tp_colon"
        app:layout_constraintLeft_toRightOf="@id/text_id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/show_average_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평균 단가 입니다."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/show_trade_price"
        app:layout_constraintLeft_toRightOf="@+id/text_id_colon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>